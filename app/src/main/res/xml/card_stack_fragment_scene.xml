<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/startToEasy"
        app:constraintSetEnd="@+id/easy"
        app:constraintSetStart="@+id/start"
        app:duration="300">

        <OnSwipe
            app:dragDirection="dragUp"
            app:onTouchUp="autoComplete"
            app:touchAnchorId="@id/cardOne"
            app:touchRegionId="@id/cardOne" />

        <KeyFrameSet>
            <KeyPosition
                app:framePosition="50"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/cardOne"/>
        </KeyFrameSet>
    </Transition>

    <Transition
        android:id="@+id/startToGood"
        app:constraintSetEnd="@+id/good"
        app:constraintSetStart="@+id/start"
        app:duration="300">

        <OnSwipe
            app:dragDirection="dragRight"
            app:onTouchUp="autoComplete"
            app:touchAnchorId="@id/cardOne"
            app:touchRegionId="@id/cardOne" />

        <KeyFrameSet>
            <KeyPosition
                app:framePosition="50"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/cardOne" />
        </KeyFrameSet>
    </Transition>

    <Transition
        android:id="@+id/startToAgain"
        app:constraintSetEnd="@+id/again"
        app:constraintSetStart="@+id/start"
        app:duration="300">

        <OnSwipe
            app:dragDirection="dragLeft"
            app:onTouchUp="autoComplete"
            app:touchAnchorId="@id/cardOne"
            app:touchRegionId="@id/cardOne" />

        <KeyFrameSet>
            <KeyPosition
                app:framePosition="50"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/cardOne"/>
        </KeyFrameSet>
    </Transition>

    <Transition
        android:id="@+id/startToHard"
        app:constraintSetEnd="@+id/hard"
        app:constraintSetStart="@+id/start"
        app:duration="300">

        <OnSwipe
            app:dragDirection="dragDown"
            app:onTouchUp="autoComplete"
            app:touchAnchorId="@id/cardOne"
            app:touchRegionId="@id/cardOne" />

        <KeyFrameSet>
            <KeyPosition
                app:framePosition="50"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/cardOne"/>
        </KeyFrameSet>
    </Transition>


    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@id/cardOne">
            <Layout
                android:layout_width="270dp"
                android:layout_height="270dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <CustomAttribute
                app:attributeName="radius"
                app:customDimension="24dp" />
        </Constraint>


        <Constraint android:id="@id/cardTwo">
            <Layout
                android:layout_width="270dp"
                android:layout_height="270dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <Transform
                android:scaleX="0.90"
                android:scaleY="0.90" />
        </Constraint>
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/againFloating"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/hardFloating"
            android:layout_marginEnd="8dp" />
        <Constraint
            app:layout_constraintStart_toEndOf="@id/goodFloating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp"
            android:id="@+id/easyFloating"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp" />
        <Constraint
            app:layout_constraintStart_toEndOf="@id/againFloating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp"
            android:id="@+id/hardFloating"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/goodFloating"
            android:layout_marginEnd="8dp" />
        <Constraint
            app:layout_constraintStart_toEndOf="@id/hardFloating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp"
            android:id="@+id/goodFloating"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/easyFloating"
            android:layout_marginEnd="8dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/easy">
        <Constraint android:id="@id/cardOne">
            <Layout
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:layout_marginBottom="500dp"
                app:layout_constraintBottom_toTopOf="parent"
                app:layout_constraintWidth_percent="0.9" />
        </Constraint>

        <Constraint android:id="@id/cardTwo">
            <Transform
                android:scaleX="1"
                android:scaleY="1" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/good">
        <Constraint android:id="@id/cardOne">
            <Layout
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:layout_marginStart="500dp"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintWidth_percent="0.9" />
        </Constraint>

        <Constraint android:id="@id/cardTwo">
            <Transform
                android:scaleX="1"
                android:scaleY="1" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/again">
        <Constraint android:id="@id/cardOne">
            <Layout
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:layout_marginEnd="500dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.9" />
        </Constraint>

        <Constraint android:id="@id/cardTwo">
            <Transform
                android:scaleX="1"
                android:scaleY="1" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/hard">
        <Constraint android:id="@id/cardOne">
            <Layout
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:layout_marginTop="500dp"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.9" />
        </Constraint>

        <Constraint android:id="@id/cardTwo">
            <Transform
                android:scaleX="1"
                android:scaleY="1" />
        </Constraint>
    </ConstraintSet>



</MotionScene>